<%- include("partials/header"); %> 

<!-- title photo body -->

<div class="container mt-5 mb-1">
    
    <form action="/show/<%= data._id %>" method="POST">

        <div class="form-group">
            <label for="titleInp">Title</label>
            <input type="text" class="form-control" id="titleInp" required name="title" value="<%= data.title %> ">
        </div>
    
        <div class="form-group">
            <label for="imgUrl">Image Url</label>
            <input type="text" class="form-control" id="imgUrl" required name="image" value="<%= data.image %> ">
        </div>
          
          
        <div class="form-group">
            <label for="postText">Write Post</label>
            <textarea class="form-control" id="postText" required rows="3" name="postText"><%=data.postText %> </textarea>
        </div>

        <button class="btn btn-success btn-lg">Update</button>
    
    </form>
    
</div>



<%- include("partials/footer"); %> 