<%- include("partials/header"); %> 

<!-- title photo body -->

<div class="container mt-5 mb-1">
    <form action="/create" method="POST">

        <div class="form-group">
            <label for="titleInp">Title</label>
            <input type="text" class="form-control" id="titleInp" required name="title" placeholder="Title">
        </div>
    
        <div class="form-group">
            <label for="imgUrl">Image Url</label>
            <input type="text" class="form-control" id="imgUrl" required name="image" placeholder="Image Url">
        </div>
          
          
        <div class="form-group">
            <label for="postText">Write Post</label>
            <textarea class="form-control" id="postText" required rows="3" name="postText"></textarea>
        </div>

        <button class="btn btn-success btn-lg">Post</button>
    
    </form>
    
</div>



<%- include("partials/footer"); %> 